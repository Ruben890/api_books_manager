{
    "swagger": "2.0",
    "info": {
        "title": "API Books Manager",
        "description": "api de manejo de libros con login",
        "version": "1.0.0"
    },
    "basePath": "/api/v1",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth User"
                ],
                "summary": "Registrar usuario",
                "description": "",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Información del usuario para registrar",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Usuario registrado satisfactoriamente"
                    },
                    "500": {
                        "description": "Error del servidor"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth User"
                ],
                "summary": "Iniciar sesión",
                "description": "",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Información del usuario para iniciar sesión",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "format": "email"
                                },
                                "password": {
                                    "type": "string",
                                    "format": "password"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Inicio de sesión exitoso"
                    },
                    "401": {
                        "description": "Credenciales inválidas"
                    },
                    "500": {
                        "description": "Error del servidor"
                    }
                }
            }
        },
        "/auth/user": {
            "get": {
                "tags": [
                    "Auth User"
                ],
                "summary": "Obtener información del usuario autenticado",
                "description": "",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Obtener información del usuario autenticado"
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "500": {
                        "description": "Error del servidor"
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth User"
                ],
                "summary": "Cerrar sesión",
                "description": "",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Sesión cerrada satisfactoriamente"
                    }
                }
            }
        },
        "/books/createBook": {
            "post": {
                "tags": [
                    "Books Manager"
                ],
                "summary": "Crear libros",
                "description": "",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Información del libro",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Books"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "nuevo libro creado"
                    },
                    "500": {
                        "description": "Error del servidor"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "Books": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "year": {
                    "type": "integer"
                }
            }
        }
    }
}